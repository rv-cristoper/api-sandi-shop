{{#if success}}
<header class="navbar navbar-expand-lg p-0">
    <div class="container-fluid header_container ">
        <p class="m-0">͓̽s͓̽a͓͓̽̽n͓͓̽̽d͓͓̽̽i͓̽s͓̽</p>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <nav class="collapse navbar-collapse navigation p-0" id="navbarNav">
            <ul class="navbar-nav ms-auto text-center main_list px-0">
                <li class="nav-item"><a class="nav-link" href="/products">Productos</a>
                </li>
                <li class="nav-item"><a class="nav-link active" aria-current="page" href="/users">Usuarios</a>
                </li>
                <li class="nav-item"><a class="nav-link" href="/profile">Perfil</a>
                </li>
            </ul>
        </nav>
        <div class="section_cart">
            <span></span>
            <a href="/carts/{{user.cartId}}" style="color: white;">
                <i class="fa-sharp fa-solid fa-cart-shopping" id="showCart"></i>
            </a>
        </div>
        <button onclick="logoutUser()" class="btn btn-dark">Cerrar sesión</button>
    </div>
</header>
<section style="padding: 2rem;">
    <h1 style="padding-bottom: 2rem;">Lista de usuarios</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nombre y Apellidos</th>
                <th scope="col">Correo</th>
                <th scope="col">Rol</th>
                <th scope="col">Documentos</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each users}}
            <tr>
                <th scope="row">{{this.index}}</th>
                <td>{{this.name}}</td>
                <td>{{this.email}}</td>
                <td>{{this.role}}</td>
                <td style="max-width: 250px;">{{this.documents}}</td>
                <td>
                    <button type="button" class="btn btn-warning" onclick="changeRole('{{this._id}}');">Cambiar
                        rol</button>
                    <button type="button" class="btn btn-danger" onclick="deleteUser('{{this._id}}');">Eliminar</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</section>
<script src="/js/user.js"></script>
<script src="/js/auth.js"></script>
{{else}}
<div class="general-page">
    <div class="text-wrapper">
        <div class="title" data-content="404">
            403 - ACCESO DENEGADO
        </div>

        <div class="subtitle">
            Ups, No tienes permiso para acceder a esta página.
        </div>
        <div class="buttons">
            <a class="btn btn-dark btn-home" href="/products">Ir a la página principal</a>
        </div>
    </div>
</div>
{{/if}}