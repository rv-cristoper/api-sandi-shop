<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <div class="mb-md-5 mt-md-4 pb-5">
                            <h2 class="fw-bold mb-2 text-uppercase">Iniciar Sesión</h2>
                            <p class="text-white-50 mb-5">Por favor ingrese su correo y contraseña!</p>
                            <form class="text-center" id="loginUser"
                                onsubmit="event.preventDefault(); handleLoginUser();">
                                <div class=" form-white mb-4">
                                    <input type="email" name="email" class="form-control form-control-lg" required />
                                    <label class="form-label" for="typeEmailX">Correo</label>
                                </div>
                                </br>
                                <div class="form-outline form-white mb-4">
                                    <input type="password" name="password" class="form-control form-control-lg"
                                        required />
                                    <label class="form-label" for="typePasswordX">Contraseña</label>
                                </div>

                                </br>
                                <button class="btn btn-outline-light btn-lg px-5" type="submit">Acceder</button>
                                <button class="btn btn-outline-light btn-lg px-5" type="button" onclick="handleLoginGitHub()">Entrar con Github</button>
                            </form>
                        </div>
                        <div>
                            <p class="mb-0">¿No tienes una cuenta? <a href="http://localhost:8080/register"
                                    class="text-white-50 fw-bold">Registrese</a>
                            </p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18/dist/sweetalert2.min.js"></script>
<script src="/js/auth.js"></script>